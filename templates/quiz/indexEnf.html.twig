
{% extends 'baseEnf.html.twig' %}

{% block body %}
    <div class="main-w3pvt mian-content-wthree text-center" id="listQuiz">
        <div class="container">
            <div class="style-banner mx-auto">
                <h3 class="text-wh font-weight-bold"><span>Liste des Quizs</span></h3>
                <p class="mt-3 text-li" id="join">Consulter ou supprimer les quizs disponibles dans notre site</p>
                <form method="post" action="{{ path(' ReQ') }}" >
                    <input type="Text" class="form-control"   name ='search'>
                    <input type="submit" class="btn btn-light"  placeholder="Rechercher par quiz..." Value="rechercher">

                    <td>     <a href="{{ path('triQE') }}" class="btn btn-info"> Tri par nom</a></td>

                    <br>
                    <table class="myOtherTable">
                        <thead>
                        <tr>
                            <th>Nom du quiz</th>
                            <th>Type de quiz</th>
                            <th>Action</th>


                        </tr>
                        </thead>
                        <tbody>
                        {% for quiz in lstQuiz %}
                            <tr>
                                <td>{{ quiz.title }}</td>
                                {% if quiz.isamericain == 1 %} <td> Americain</td> {% endif %}
                                {% if quiz.isamericain == 0 %} <td> Pas Americain</td> {% endif %}

                                <td>
                                    <a href={{ path ('getQuestion',{'quiz' : quiz.quizId}) }}> Ouvrir </a>
                                </td>




                            </tr>
                        {% else %}
                            <tr>
                                <td> Quiz introuvables !</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <br><br>

            </div>
        </div>
    </div>

{% endblock %}

