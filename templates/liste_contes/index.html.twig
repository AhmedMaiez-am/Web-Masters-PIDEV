{% extends 'base.html.twig' %}

{% block body %}
    <body>
    <header>
        <div class="container">
            <div class="header d-lg-flex justify-content-between align-items-center py-2 px-sm-2 px-1">

                <div id="logo">
                    <h1><a href="#listContes">KIDZY</a></h1>
                </div>
                <div class="nav_w3ls ml-lg-5">
                    <nav>
                        <label for="drop" class="toggle">Menu</label>
                        <input type="checkbox" id="drop" />
                        <ul class="menu">
                            <li><a href="{{ path ('redirection_cours')}}">Liste des cours</a></li>
                            <li><a href="#listContes">Liste des contes</a></li>
                            <li><a href="{{ path ('redirection_inv_cours')}}">Inventaire cours</a></li>
                            <li><a href="{{ path ('redirection_inv_contes')}}">Inventaire contes</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <section class="inner-banner-w3ls py-5" id="listContes">
        <div class="container py-xl-5 py-lg-3">
            <h3 class="title-w3 mb-md-5 mb-sm-4 mb-2 text-center font-weight-bold">Liste des contes</h3>
            <p class="mt-3 text-li text-center" id="join">Consulter la liste des contes existantes dans notre site</p>
            <table class="myOtherTable">
                <thead>
                <tr>
                    <th>Titre du conte</th>
                    <th>Auteur du conte</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for contes in lstContes %}
                    <tr>
                        <td>{{ contes.titre }}</td>
                        <td>{{ contes.auteur }}</td>
                        <td>
                            <a href="{{ path ('ajouter',{'idconte':contes.idconte}) }}">Ajouter</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td>Aucune contes n'a été trouvé !</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </section>
    <footer class="middlesection-w3pvt py-sm-5 pt-sm-0 pt-5 mt-5">
        <div class="container py-xl-4 py-lg-3">
            <div class="row footer-grids">
                <div class="col-lg-2 col-6 footer-grid">
                    <h3 class="mb-sm-4 mb-3">Navigation</h3>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path ('redirection_cours')}}" >Liste des cours</a>
                        </li>
                        <li>
                            <a href="#listContes">Liste des contes</a>
                        </li>
                        <li>
                            <a href="{{ path ('redirection_inv_cours')}}">Inventaire cours</a>
                        </li>
                        <li>
                            <a href="{{ path ('redirection_inv_contes')}}">Inventaire contes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <a href="#listContes" class="move-top text-center">
        <span class="fa fa-angle-double-up" aria-hidden="true"></span>
    </a>
    </body>
{% endblock %}
