{% extends 'base.html.twig' %}
{% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <title>Dashio - Bootstrap Admin Template</title>

    <!-- Favicons -->
    <link href="bas/img/favicon.png" rel="icon">
    <link href="bas/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Bootstrap core CSS -->
    <link href="bas/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--external css-->
    <link href="bas/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="bas/css/zabuto_calendar.css">
    <link rel="stylesheet" type="text/css" href="bas/lib/gritter/css/jquery.gritter.css" />
    <!-- Custom styles for this template -->
    <link href="bas/css/style.css" rel="stylesheet">
    <link href="bas/css/style-responsive.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" integrity="sha512-/zs32ZEJh+/EO2N1b0PEdoA10JkdC3zJ8L5FTiQu82LR9S/rOQNfQN7U59U9BC12swNeRAz3HSzIL2vpp4fv3w==" crossorigin="anonymous">

    <div class="container">
                 <h1 align="Center">Statistiques</h1>
        <br>
        <h1>Parents bloqués :</h1>
        <canvas id="parent" width="400" height="100"></canvas>
        <br>
        <h1>les Enfants :</h1>
        <canvas id="enf" width="400" height="100"></canvas>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous"></script>
    <script>
        let parent = document.querySelector("#parent")
        let categGraph = new Chart(parent, {
            type: "pie",
            data: {
                labels: {{ identifiant|raw }},
                datasets: [{

                    label: "Nombre de parents bloqués",
                    data: {{ countParent|raw }} ,
                    backgroundColor: {{ parentColor | raw }},
                } ,

                ]
            },

        }) </script>
    <script>
        let enf = document.querySelector("#enf")
        let annGraph = new Chart(enf, {
            type: "line",
            data: {
                labels: {{ ageEnfant|raw }},
                datasets: [{

                    label: "Nombre des enfants selon l'age",
                    data: {{ count|raw }} ,
                    backgroundColor: '#1A5276' ,

                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })

    </script>
{% endblock %}
 {% block js %}
     <script src="bas/lib/jquery/jquery.min.js"></script>

     <script src="bas/lib/bootstrap/js/bootstrap.min.js"></script>
     <script class="include" type="text/javascript" src="bas/lib/jquery.dcjqaccordion.2.7.js"></script>
     <script src="bas/lib/jquery.scrollTo.min.js"></script>
     <script src="bas/lib/jquery.nicescroll.js" type="text/javascript"></script>
     <script src="bas/lib/jquery.sparkline.js"></script>
     <!--common script for all pages-->
     <script src="bas/lib/common-scripts.js"></script>
     <script type="text/javascript" src="bas/lib/gritter/js/jquery.gritter.js"></script>
     <script type="text/javascript" src="bas/lib/gritter-conf.js"></script>
     <!--script for this page-->
     <script src="bas/lib/sparkline-chart.js"></script>
     <script src="bas/lib/zabuto_calendar.js"></script>
 {% endblock %}