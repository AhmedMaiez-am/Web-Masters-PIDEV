{% extends 'base.html.twig' %}



{% block body %}
    <body>
    <header>
        <div class="container">
            <div class="header d-lg-flex justify-content-between align-items-center py-2 px-sm-2 px-1">

                <div id="logo">
                    <h1><a href="#listCours">KIDZY</a></h1>
                </div>
                <div class="nav_w3ls ml-lg-5">
                    <nav>
                        <label for="drop" class="toggle">Menu</label>
                        <input type="checkbox" id="drop" />
                        <ul class="menu">
                            <li><a href="{{ path ('redirection_cours')}}">Liste des cours</a></li>
                            <li><a href="{{ path ('redirection_contes')}}">Liste des contes</a></li>
                            <li><a href="{{ path ('redirection_inv_cours')}}">Inventaire cours</a></li>
                            <li><a href="{{ path ('redirection_inv_contes')}}">Inventaire contes</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div class="main-w3pvt mian-content-wthree" id="pay">
        <div class="container">
            <div class="style-banner mx-auto">
                <h3 class="title-w3 mb-5 text-center text-wh font-weight-bold"><span>Paiement des cours</span></h3>
                <p class="mt-3 text-li text-center" id="join">Veuillez insérer les données nécessaires afin d'acheter le cours !</p>
                {% for message in app.flashes('payInvalide') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                <form class="form-login" action="{{ path('getParents') }}" method="post">
                    <div class="modal-body my-5 pt-4">

                        <div class="login-wrap">
                            <label class="col-form-label">Numéro de la carte :</label>
                            <input type="text" name="numcarte" class="form-control" placeholder="Numéro de votre carte...">
                            <br>
                            <label class="col-form-label">Mot de passe de la carte :</label>
                            <input type="password" name="mdpcarte" class="form-control" placeholder="Mot de passe de votre carte...">
                            <br>
                            <div class="sub-honey">
                            <input class="form-control btn" type="submit" value="Payer">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="py-5">
        <div class="container py-xl-4 py-lg-3">
            <div class="row footer-grids">
                <div class="col-lg-2 col-6 footer-grid">
                    <h3 class="mb-sm-4 mb-3">Navigation</h3>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path ('redirection_cours')}}">Liste des cours</a>
                        </li>
                        <li>
                            <a href="{{ path ('redirection_contes')}}">Liste des contes</a>
                        </li>
                        <li>
                            <a href="{{ path ('redirection_inv_cours')}}">Inventaire cours</a>
                        </li>
                        <li>
                            <a href="{{ path ('redirection_inv_contes')}}">Inventaire contes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <a href="#pay" class="move-top text-center">
        <span class="fa fa-angle-double-up" aria-hidden="true"></span>
    </a>

    </body>
{% endblock %}
