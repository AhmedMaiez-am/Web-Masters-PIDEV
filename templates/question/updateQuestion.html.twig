                {{ form_errors(form.question) }}

                {{ form_widget(form.question,{'attr':{'type':'text','class':'form-control','placeholder':'Votre question!...'}}) }}
                <br> <br>
                {{ form_errors(form.option1) }}

                {{ form_widget(form.option1,{'attr':{'type':'textarea','class':'form-control','placeholder':'1ér choix!...'}}) }}
                <br> <br>
                {{ form_errors(form.option2) }}

                {{ form_widget(form.option2,{'attr':{'type':'textarea','class':'form-control','placeholder':'2éme choix!...'}}) }}
                <br> <br>
                {{ form_errors(form.option3) }}

                {{ form_widget(form.option3,{'attr':{'type':'textarea','class':'form-control','placeholder':'3éme choix!...'}}) }}
                <br> <br>
                {{ form_errors(form.option4) }}

                {{ form_widget(form.option4,{'attr':{'type':'textarea','class':'form-control','placeholder':'4éme choix!...'}}) }}
                <br>

                {{ form_row(form.answer, {'attr':{'type':'textarea','class':'form-control','placeholder':'4éme choix!...'}}) }}

                <br>

                <button type="submit" class="btn btn-primary btn-lg btn-block "> Modifier Question  </button>

                {{ form_end(form) }}
                <br> <br>
            </div>
        </div>
    </div>
{% endblock %}