{% extends 'base.html.twig' %}
{% block body %}
    <div class="main-w3pvt mian-content-wthree text-center" id="listQuiz">
        <div class="container">
            <div class="style-banner mx-auto">
                <h3 class="text-wh font-weight-bold"><span>Modifier Questions</span></h3>
                <p class="mt-3 text-li" id="join">Modifier les questions disponibles dans notre site</p>
                {% form_theme form 'bootstrap_4_layout.html.twig' %}
                {{ form_start(form) }}


                {{ form_widget(form.quiz,{'attr':{'type':'textarea','class':'form-control','placeholder':'1ér choix!...'}}) }}
