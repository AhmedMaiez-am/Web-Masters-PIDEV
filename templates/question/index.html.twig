
{% extends 'base.html.twig' %}

{% block body %}
    <div class="main-w3pvt mian-content-wthree text-center" id="listQuestion">
        <div class="container">
            <div class="style-banner mx-auto">
                <h3 class="text-wh font-weight-bold"><span>Liste des Questions</span></h3>
                <p class="mt-3 text-li" id="join">Consulter la liste des questions disponibles dans notre site</p>
                 <form method="post" action="{{ path('rechQ') }}" >
                   <form method="post" action="{{ path('rechQuiz') }}" >
                    <input type="Text" class="form-control" name ='search'><input type="submit"   placeholder="Rechercher par nom de question..." Value="rechercher">
                
                <table class="myOtherTable">
                    <thead>
                    <tr>
                        <th>Question</th>
                        <th>Choix1</th>
                        <th>Choix2</th>
                        <th>Choix3</th>
                        <th>Choix4</th>
                        <th>Answer</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>


                    </tr>
                    </thead>
                    <tbody>
                    {% for question in lstQuestion %}
                        <tr>
                            <td>{{ question.question }}</td>
                            <td>{{ question.option1 }}</td>
                            <td>{{ question.option2 }}</td>
                            <td>{{ question.option3 }}</td>
                            <td>{{ question.option4 }}</td>
                            <td>{{ question.answer }}</td>

                            <td>
                                <a href={{ path ('upquestion',{'idq' : question.questionid}) }}> M </a>

                            </td>
                            <td>

                                <a href={{ path ('dd',{'idq' : question.questionid}) }}> X </a>
                            </td>



                        </tr>
                    {% else %}
                        <tr>
                            <td> Questions introuvables !</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <br><br>
            </div>
        </div>
    </div>

{% endblock %}

